@model System.Collections.Generic.List<DBAudit.Infrastructure.Contracts.Entities.Database>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Databases</h1>
        </div>
        <div class="col-6">
            <form action="/databases/@ViewBag.EnvironmentId/refresh" method="post">
                <button type="submit" class="btn btn-primary float-end">Refresh</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-striped ">
                <tr>
                    <th>Name</th>
                    <th>Tables</th>
                    <th>Active</th>
                </tr>
                @foreach (var database in Model)
                {
                    <tr>
                        <td>@database.Name</td>
                        <td><a href="/tables/@database.Id">Tables</a></td>
                        <td>@(database.IsActive ? "✅" : "❌")</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
