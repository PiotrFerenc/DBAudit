@model System.Collections.Generic.List<DBAudit.Infrastructure.Contracts.Entities.Table>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Tables</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-striped ">
                <tr>
                    <th>Name</th>
                    <th>Active</th>
                    <th></th>
                </tr>
                @foreach (var table in Model)
                {
                    <tr>
                        <td>@table.Name</td>
                        <td>@(table.IsActive ? "✅" : "❌")</td>
                        <td><a href="/columns/@table.Id">Columns</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
